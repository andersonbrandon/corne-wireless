#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define LOWER   1
#define UPPER   2

/ {
    combos {
      compatible = "zmk,combos";

      /**
      * Alternative backspace combo (21, 22)
      */
      combo_bksp {
        timeout-ms = <20>;
        key-positions = <21 22>;
        bindings = <&bspc_del>;
        layers = <0>;
      };

      /**
      * Alternative tab combo (13 a, 14 s)
      */
      l_tab_key {
        timeout-ms = <20>;
        key-positions = <13 14>;
        bindings = <&kp TAB>;
      };
    };

    behaviors {
      td_mt: tap_dance_mod_tap {
        compatible = "zmk,behavior-tap-dance";
        label = "TAP_DANCE_MOD_TAP";
        #binding-cells = <0>;
        tapping-term-ms = <180>;
        bindings = <&lt LOWER LALT>, <&mo 2>;
      };

      /**
      * Converts the backspace into a delete if shift or alt is held
      */
      bspc_del: backspace_delete {
        compatible = "zmk,behavior-mod-morph";
        label = "BACKSPACE_DELETE";
        #binding-cells = <0>;
        bindings = <&kp BACKSPACE>, <&kp DELETE>;
        mods = <(MOD_LSFT|MOD_LALT)>;
      };

      /**
      * Converts the escape key into a grave when the GUI key is held
      */
      esc_grave: escape_grave {
        compatible = "zmk,behavior-mod-morph";
        label = "ESCAPE_GRAVE";
        #binding-cells = <0>;
        bindings = <&kp ESC>, <&kp GRAVE>;
        mods = <(MOD_LGUI|MOD_RGUI)>;
        keep-mods = <(MOD_LGUI)>;
      };
    };

  keymap {
    compatible = "zmk,keymap";

    default_layer {
// -----------------------------------------------------------------------------------------
// | ESC |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// |     |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  '  |  ;   |
// | ALT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  |      |
//                   | ALT | SHF | CMD |   | SPC | SHF  | ALT |

                        label = "Base";
                        bindings = <
   &esc_grave &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &bspc_del
   &none      &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SQT  &kp SEMI
   &kp LALT   &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &none
                  &kp LSHFT &td_mt &kp LCMD   &kp SPACE &kp RALT &kp RSHFT
                        >;
                };

                lower_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  (  |   |  )  |  7  |  8  |  9  |     | DEL |
// | BTCLR| BT1 | BT2 | BT3 | BT4 |  [  |   |  ]  |  4  |  5  |  6  |     |     |
// | SHFT |     |     |     |     |     |   |     |  1  |  2  |  3  |     |     |
//                    |     |     | SPC |   | ENT |     |  0  |

                        label = "Depths";
                        bindings = <
   &kp TAB    &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp RPAR &kp N7  &kp N8 &kp N9 &trans &kp DEL
   &bt BT_CLR &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp RBKT &kp N4  &kp N5 &kp N6 &trans &trans
   &kp LSHFT  &trans       &trans       &trans       &trans       &trans         &none    &kp N1  &kp N2 &kp N3 &trans &trans
                          	            &trans       &trans       &kp SPACE      &kp RET  &trans  &kp N0
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |     |    |  UP |    |    |    |
// | CTRL |     |     |     |     |     |   |     | <- |  DN | -> |    |    |
// | SHFT |     |     |     |     |     |   |     |    |     |    |    |    |
//                    | GUI |     | SPC |   | ENT |    | ALT |
                        label = "Raise";
                        bindings = <
   &kp TAB   &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp C_VOL_UP  &kp C_PREV  &kp UP    &kp C_NEXT &trans       &trans
   &kp LCTRL &trans   &trans &trans   &trans   &trans      &kp C_VOL_DN  &kp LEFT    &kp DOWN  &kp RIGHT  &trans       &trans
   &kp LSHFT &trans   &trans &trans   &trans   &trans      &none         &none       &none     &none      &kp C_BRI_UP &kp C_BRI_DN
                    	     &kp LGUI &trans   &kp SPACE     &kp RET       &trans      &kp RALT
                        >;
                };
        };
};
